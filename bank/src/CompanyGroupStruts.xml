<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<package name="groupAction" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="auth"
				class="com.neusoft.interceptor.AuthInterceptor"></interceptor>
			<interceptor-stack name="mystack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="auth"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<global-results>
			<result name="login">sign_in.jsp</result>
		</global-results>
		<action name="group_*" class="com.neusoft.action.GroupAction"
			method="{1}">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="query_win">/WEB-INF/jsp/group/ComAccountQuery.jsp</result>
			<result name="transfer_win">/WEB-INF/jsp/group/grouptransfer.jsp</result>
			<result name="transdetail_win">/WEB-INF/jsp/group/grouptransdetail.jsp</result>
			<result name="cashsweep_win">/WEB-INF/jsp/group/cashsweep.jsp</result>
		</action>

	</package>
	
	<package name="groupAction2" namespace="/" extends="struts-default,json-default">
		<interceptors>
			<interceptor name="auth"
				class="com.neusoft.interceptor.AuthInterceptor"></interceptor>
			<interceptor-stack name="mystack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="auth"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<global-results>
			<result name="login">sign_in.jsp</result>
		</global-results>
		
		<action name="GroupTransferAction" class="com.neusoft.action.GroupAction"
			method="transfer">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result type="json">jsonResult</result>	
		</action>
		<action name="cashsweepAction" class="com.neusoft.action.GroupAction"
			method="cashsweep">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result type="json">jsonResult</result>	
		</action>

	</package>
	
</struts>
